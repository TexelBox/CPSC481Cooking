<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Cookbook">
    
    <!-- Contains global resources that can be referenced anywhere in XAML or CS
        Usage (XAML): e.g. ImageSource="{StaticResource unfillHeartIcon}"
        Usage (CS): e.g. heartButtonImageBrush.ImageSource = (BitmapImage)Application.Current.Resources["unfillHeartIcon"];
    -->

    <BitmapImage x:Key="unfillHeartIcon" UriSource="Images/unfillHeart.png" />

    <BitmapImage x:Key="fillHeartIcon" UriSource="Images/heart.png" />

</ResourceDictionary>