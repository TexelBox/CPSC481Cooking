<UserControl x:Class="Cookbook.CountdownTimer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cookbook"
             mc:Ignorable="d" 
                 d:DesignHeight="150" d:DesignWidth="150">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Ellipse Grid.Row="0" Fill="#FF9C3828" HorizontalAlignment="Center" Height="120" Stroke="Black" VerticalAlignment="Top" Width="133.521" Margin="6.479,0,10,0"/>
        <Button x:Name="_startTimer" Click="_start_Click" Content="START TIMER"  HorizontalContentAlignment="Center" FontSize="15"  Background="White" Margin="10,116.436,13.283,3.564" Grid.RowSpan="2"/>
        <TextBlock x:Name="CountdownDisplay" TextWrapping="Wrap" TextAlignment="Center" Text="00:00:00" VerticalAlignment="Center" FontFamily="Segoe UI Semibold" FontSize="24" Foreground="#FFC29A3A"/>
    </Grid>


</UserControl>
