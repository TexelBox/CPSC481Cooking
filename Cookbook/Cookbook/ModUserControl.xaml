<UserControl x:Class="Cookbook.ModUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cookbook"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="576">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <TextBlock Name="IES" TextWrapping="Wrap" Margin="0,12,15,12.215" 
                       Width="390" FontSize="20" VerticalAlignment="Center"
                       FontWeight="DemiBold">Ingredients/Equipments/Steps</TextBlock>
            <Button Name="Change" Width="40" VerticalAlignment="Center" Height="50" 
                    Content="+" Margin="0,0,0,0.215" Click="Change_Click"/>
            <Button Name="Delete" Width="40" VerticalAlignment="Center" Height="50" 
                    Content="-" Margin="0,0,0,0.215" Click="Delete_Click"/>
        </StackPanel>

    </Grid>
</UserControl>
