<UserControl x:Class="Cookbook.IngredientTag"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cookbook"
             mc:Ignorable="d" Height="35.557" Width="191.099">
    <Grid Margin="0,0,21,-0.5">
        <Grid.RowDefinitions>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="29*"/>
        </Grid.RowDefinitions>
        <Rectangle Fill="LightGoldenrodYellow" HorizontalAlignment="Left" Height="36" VerticalAlignment="Top" Width="170" Margin="0,0,0,-0.5" Grid.RowSpan="2"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Height="36" VerticalAlignment="Top" Width="170" Grid.RowSpan="2">
            <TextBlock x:Name="name" TextWrapping="Wrap" Text="TextBlock" Width="126" Margin="3"/>
            <Button Background="LightGoldenrodYellow" Content="X" Width="38" FontSize="24" Click="delete_Click" Style="{StaticResource CustomButtonStyle}"/>
        </StackPanel>

    </Grid>
</UserControl>
